<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_page_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_recent_search_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <com.simicart.core.menutop.search.view.PredicateLayout
            android:id="@+id/ll_recent_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="70dp"
            android:background="@color/material_page_background"></com.simicart.core.menutop.search.view.PredicateLayout>

        <TextView
            android:id="@+id/tv_trending_search_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>

        <com.simicart.core.menutop.search.view.PredicateLayout
            android:id="@+id/ll_trending_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="70dp"
            android:background="@color/material_page_background"></com.simicart.core.menutop.search.view.PredicateLayout>

    </LinearLayout>

</LinearLayout>